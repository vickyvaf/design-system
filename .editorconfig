# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 spaces indentation for JavaScript and TypeScript files
[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

# 2 spaces indentation for JSON files
[*.json]
indent_style = space
indent_size = 2

# Ignore minified JavaScript files
[**.min.js]
indent_style = ignore

# Trim trailing whitespaces and ensure empty lines end with a newline
[*.{js,ts,json}]
trim_trailing_whitespace = true
ensure_newline_at_eof = true

# Set character encoding to UTF-8
[*]
charset = utf-8

# Ignore some commonly generated folders and files
[.next]
[.vscode]
node_modules/

# Ignore log files and other autogenerated files
*.log
*.log.*
*.yarn-*
*.pnp.*

# Ignore JetBrains IDE files
.idea/

# Ignore macOS system files
.DS_Store

# Ignore Windows thumbnail cache files
Thumbs.db
ehthumbs.db

# Ignore ESLint cache files
.eslintcache
